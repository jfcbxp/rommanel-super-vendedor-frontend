{
    "build": {
        "base": {
            "node": "20.9.0",
            "yarn": "1.22.19",
            "env": {
                "API_KEY": "X"
            },
            "android": {
                "image": "default",
                "env": {
                    "PLATFORM": "android"
                }
            },
            "ios": {
                "image": "latest",
                "env": {
                    "PLATFORM": "ios"
                }
            }
        },
        "development": {
            "extends": "base",
            "developmentClient": true,
            "env": {
                "ENVIRONMENT": "development"
            },
            "android": {
                "distribution": "internal",
                "withoutCredentials": true
            },
            "ios": {
                "simulator": true
            }
        },
        "staging": {
            "extends": "base",
            "env": {
                "ENVIRONMENT": "staging"
            },
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            }
        },
        "production": {
            "extends": "base",
            "env": {
                "ENVIRONMENT": "production"
            }
        }
    }
}
